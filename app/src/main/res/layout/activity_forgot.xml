<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.dreamcast.KiteFlightAndroidShvaiba.ForgotActivity">

    <FrameLayout
        android:id="@+id/frameLayout3"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:background="#2196f3"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <ImageView
            android:onClick="onClickLogo"
            android:id="@+id/imageView19"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:contentDescription="@string/logo"
            android:scaleType="centerInside"
            android:src="@drawable/logo" />

        <ImageView
            android:rotation="-85"
            android:id="@+id/imageView20"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left|top"
            android:alpha=".2"
            android:contentDescription="background image 2"
            android:scaleType="centerInside"
            android:src="@drawable/vector_logo_1"
            android:layout_marginLeft="51dp" />

        <ImageView
            android:rotation="-35"
            android:id="@+id/imageView21"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right|top"
            android:alpha=".2"
            android:contentDescription="background image 2"
            android:scaleType="centerInside"
            android:src="@drawable/vector_logo_2"
            android:layout_marginRight="10dp" />

        <ImageView
            android:rotation="-35"
            android:id="@+id/imageView22"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:alpha=".2"
            android:contentDescription="background image 3"
            android:scaleType="centerInside"
            android:src="@drawable/vector_logo_1" />

        <ImageView
            android:rotation="35"
            android:id="@+id/imageView23"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left|bottom"
            android:alpha="0.2"
            android:contentDescription="background image 4"
            android:scaleType="centerInside"
            android:src="@drawable/vector_logo_2"
            android:layout_marginLeft="28dp" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/frameLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/frameLayout3"
        android:layout_centerHorizontal="true">

        <EditText
            android:id="@+id/editTextEmailForgot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="100dp"
            android:alpha=".7"
            android:ems="10"
            android:hint="Your email adress"
            android:inputType="textEmailAddress"
            android:textAlignment="center" />

        <ImageView
            android:id="@+id/imageView24"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="110dp"
            android:alpha=".25"
            android:scaleType="centerInside"
            android:src="@drawable/vector_icon_email"
            android:layout_marginRight="0dp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/imageViewSplash"
            android:layout_gravity="left|top"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            android:text="Forgot Password"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#2196f3" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView7"
            android:layout_gravity="left|top"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="50dp"
            android:text="Please enter your registered email." />

    </FrameLayout>

    <Button
        android:textStyle="bold"
        android:textAllCaps="false"
        android:id="@+id/buttonSubmitForgot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2196f3"
        android:text="Submit"
        android:textColor="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp" />
</RelativeLayout>
