<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_kite_credits"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#e7e7e7"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.dreamcast.KiteFlightAndroidShvaiba.KiteCreditsActivity"
    tools:showIn="@layout/activity_kite_credits">
    <Button
        android:textAllCaps="false"
        android:text="Purchase"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:ellipsize="middle"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="10dp"
        android:id="@+id/buttonPurchase"
        android:textColor="@android:color/background_light"
        android:background="#2196f3"
        android:layout_marginRight="25dp" />

    <Button
        android:textAllCaps="false"
        android:text="Cancel"
        android:layout_height="wrap_content"
        android:ellipsize="middle"
        android:id="@+id/buttonPurchaseCancel"
        android:textColor="@android:color/background_light"
        android:background="#838383"
        android:layout_alignBaseline="@+id/buttonPurchase"
        android:layout_alignBottom="@+id/buttonPurchase"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="25dp"
        android:layout_width="150dp" />

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:background="#2196f3"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">


        <TextView
            android:text="You have # credits Remaining"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:gravity="center"
            android:textColor="#fff"
            android:id="@+id/textView10" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_marginTop="25dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignBottom="@+id/frameLayout"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@android:color/background_light">

            <RadioButton
                android:layout_gravity="right|center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButtonCredits1" />

            <TextView
                android:layout_marginLeft="5dp"
                android:text="1 Kite for $ 0.99"
                android:textColor="#000"
                android:layout_gravity="center|left"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/textViewCredits1"
                android:layout_weight="0.78" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_marginTop="70dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignBottom="@+id/frameLayout"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@android:color/background_light">

            <RadioButton
                android:layout_gravity="right|center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButtonCredits2" />

            <TextView
                android:layout_marginLeft="5dp"
                android:text="10 Kites for $ 0.89 each"
                android:textColor="#000"
                android:layout_gravity="center|left"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/textViewCredits10"
                android:layout_weight="0.78" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_marginTop="115dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignBottom="@+id/frameLayout"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@android:color/background_light">

            <RadioButton
                android:layout_gravity="right|center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButtonCredits3" />

            <TextView
                android:layout_marginLeft="5dp"
                android:text="20 Kites for $ 0.79 each"
                android:textColor="#000"
                android:layout_gravity="center|left"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/textViewCredits20"
                android:layout_weight="0.78" />
        </FrameLayout>

    </FrameLayout>

    <FrameLayout
        android:layout_width="110dp"
        android:layout_below="@+id/frameLayout"
        android:layout_alignParentEnd="true"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="@android:color/background_light">

        <TextView
            android:layout_marginLeft="5dp"
            android:text="Total"
            android:layout_gravity="center|left"
            android:gravity="center"
            android:textColor="#2196f3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/textView12"
            android:layout_below="@+id/frameLayout5"
            android:layout_alignStart="@+id/frameLayout5" />
        <TextView
            android:layout_marginRight="5dp"
            android:text="$ #"
            android:layout_gravity="center|right"
            android:gravity="center"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/textViewTotal"
            android:layout_below="@+id/frameLayout5"
            android:layout_alignStart="@+id/frameLayout5" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/buttonPurchase"
        android:layout_below="@+id/frameLayout"
        android:layout_marginTop="55dp"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@android:color/background_light">

        <TextView
            android:text="Payment Information"
            android:textColor="#2196f3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView13"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp" />

        <EditText
            android:hint="Card Number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText2"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />

        <EditText
            android:hint="Month"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText3"
            android:layout_marginTop="90dp"
            android:layout_width="150dp"
            android:layout_marginLeft="10dp" />

        <EditText
            android:hint="Year"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText4"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="180dp"
            android:layout_width="150dp" />

        <EditText
            android:hint="CVV"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText5"
            android:layout_marginTop="140dp"
            android:layout_marginLeft="10dp" />
    </FrameLayout>


</RelativeLayout>
