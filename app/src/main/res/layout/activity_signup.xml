<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.dreamcast.KiteFlightAndroidShvaiba.SignupActivity">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:background="#2196f3"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <ImageView
            android:onClick="onClickLogo"
            android:id="@+id/imageView11"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:contentDescription="@string/logo"
            android:scaleType="centerInside"
            android:src="@drawable/logo" />

        <ImageView
            android:rotation="-85"
            android:id="@+id/imageView12"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left|top"
            android:alpha=".2"
            android:contentDescription="background image 2"
            android:scaleType="centerInside"
            android:src="@drawable/vector_logo_1"
            android:layout_marginLeft="51dp" />

        <ImageView
            android:rotation="-35"
            android:id="@+id/imageView13"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right|top"
            android:alpha=".2"
            android:contentDescription="background image 2"
            android:scaleType="centerInside"
            android:src="@drawable/vector_logo_2"
            android:layout_marginRight="10dp" />

        <ImageView
            android:rotation="-35"
            android:id="@+id/imageView14"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:alpha=".2"
            android:contentDescription="background image 3"
            android:scaleType="centerInside"
            android:src="@drawable/vector_logo_1" />

        <ImageView
            android:rotation="35"
            android:id="@+id/imageView15"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left|bottom"
            android:alpha="0.2"
            android:contentDescription="background image 4"
            android:scaleType="centerInside"
            android:src="@drawable/vector_logo_2"
            android:layout_marginLeft="28dp" />
    </FrameLayout>

    <Button
        android:textAllCaps="false"
        android:id="@+id/buttonRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2196f3"
        android:text="Register"
        android:textColor="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/frameLayout2"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp" />

    <FrameLayout
        android:id="@+id/frameLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/frameLayout"
        android:layout_alignParentStart="true">

        <EditText
            android:id="@+id/editTextNewPassword1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="150dp"
            android:alpha=".7"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/editTextNewPassword2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="220dp"
            android:alpha=".7"
            android:ems="10"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:textAlignment="center" />

        <ImageView
            android:id="@+id/imageView16"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="90dp"
            android:alpha=".25"
            android:scaleType="centerInside"
            android:src="@drawable/vector_icon_email" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/imageViewSplash"
            android:layout_gravity="left|top"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            android:text="Signup"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#2196f3" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView5"
            android:layout_gravity="left|top"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="50dp"
            android:text="Please enter details for Signup" />

        <ImageView
            android:id="@+id/imageView17"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="160dp"
            android:alpha=".25"
            android:scaleType="centerInside"
            android:src="@drawable/vector_icon_key" />

        <ImageView
            android:id="@+id/imageView18"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="230dp"
            android:alpha=".25"
            android:scaleType="centerInside"
            android:src="@drawable/vector_icon_key" />

        <EditText
            android:id="@+id/editTextNewEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="80dp"
            android:alpha=".7"
            android:ems="10"
            android:hint="Your email address"
            android:inputType="textEmailAddress"
            android:textAlignment="center" />
    </FrameLayout>

</RelativeLayout>
